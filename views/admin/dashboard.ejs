<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - SCO Assistant Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --sidebar-bg: <%= branding?.primaryColor || '#ea580c' %>;
    }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .stat-card { border-left: 4px solid; transition: transform 0.2s; }
    .stat-card:hover { transform: translateY(-2px); }
    .stat-card.primary { border-color: <%= branding?.primaryColor || '#ea580c' %>; }
    .stat-card.success { border-color: #198754; }
    .stat-card.info { border-color: #0dcaf0; }
    .stat-card.warning { border-color: #ffc107; }
    .event-card { transition: all 0.2s; }
    .event-card:hover { background-color: #f0f0f0 !important; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'dashboard', basePath, branding }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-speedometer2 me-2" style="color: <%= branding?.primaryColor || '#ea580c' %>"></i>Dashboard</h2>
          <span class="badge bg-light text-dark"><i class="bi bi-clock me-1"></i><%= new Date().toLocaleDateString() %></span>
        </div>

        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card stat-card primary">
              <div class="card-body">
                <h6 class="text-muted"><i class="bi bi-telephone me-1"></i>Total Calls</h6>
                <h3 class="mb-0"><%= stats.callCount %></h3>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card success">
              <div class="card-body">
                <h6 class="text-muted"><i class="bi bi-ticket-perforated me-1"></i>Tickets Sold</h6>
                <h3 class="mb-0"><%= stats.ticketCount %></h3>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card info">
              <div class="card-body">
                <h6 class="text-muted"><i class="bi bi-calendar-event me-1"></i>Upcoming Events</h6>
                <h3 class="mb-0"><%= upcomingEvents.length %></h3>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card warning">
              <div class="card-body">
                <h6 class="text-muted"><i class="bi bi-clock-history me-1"></i>Recent Calls</h6>
                <h3 class="mb-0"><%= recentCalls.length %></h3>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-telephone me-2" style="color: <%= branding?.primaryColor || '#ea580c' %>"></i>Recent Calls</h5>
                <a href="<%= basePath %>/admin/calls?token=<%= token %>" class="btn btn-sm btn-outline-secondary">View All</a>
              </div>
              <div class="card-body p-0">
                <table class="table table-hover mb-0" id="recentCallsTable">
                  <thead class="table-light">
                    <tr>
                      <th>Phone</th>
                      <th>Outcome</th>
                      <th>Time</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (recentCalls.length === 0) { %>
                    <tr><td colspan="3" class="text-center text-muted py-3">No calls yet</td></tr>
                    <% } %>
                    <% recentCalls.forEach(call => { %>
                    <tr>
                      <td><%= call.fromNumber || 'Unknown' %></td>
                      <td><span class="badge bg-<%= call.outcome === 'completed' ? 'success' : call.outcome === 'ticket_purchase' ? 'primary' : 'secondary' %>"><%= call.outcome || 'pending' %></span></td>
                      <td><small><%= new Date(call.createdAt).toLocaleString() %></small></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-event me-2" style="color: <%= branding?.primaryColor || '#ea580c' %>"></i>Upcoming Events</h5>
                <a href="<%= basePath %>/admin/events?token=<%= token %>" class="btn btn-sm btn-outline-secondary">Manage</a>
              </div>
              <div class="card-body">
                <% if (upcomingEvents.length === 0) { %>
                  <p class="text-muted text-center py-3">No upcoming events</p>
                <% } %>
                <% upcomingEvents.forEach(event => { %>
                <div class="d-flex justify-content-between align-items-center mb-2 p-3 bg-light rounded event-card">
                  <div>
                    <strong><%= event.name %></strong><br>
                    <small class="text-muted"><i class="bi bi-geo-alt me-1"></i><%= event.location %></small>
                  </div>
                  <div class="text-end">
                    <span class="badge" style="background-color: <%= branding?.primaryColor || '#ea580c' %>"><%= new Date(event.date).toLocaleDateString() %></span>
                    <br>
                    <small class="text-muted">GA: $<%= event.gaPriceOnline %></small>
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-lightning me-2" style="color: <%= branding?.primaryColor || '#ea580c' %>"></i>Quick Actions</h5>
              </div>
              <div class="card-body">
                <div class="row g-3">
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/events?token=<%= token %>" class="btn btn-outline-primary w-100">
                      <i class="bi bi-plus-circle me-2"></i>Add Event
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/kb?token=<%= token %>" class="btn btn-outline-success w-100">
                      <i class="bi bi-book me-2"></i>Knowledge Base
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/analytics?token=<%= token %>" class="btn btn-outline-info w-100">
                      <i class="bi bi-graph-up me-2"></i>View Analytics
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/settings?token=<%= token %>" class="btn btn-outline-secondary w-100">
                      <i class="bi bi-gear me-2"></i>Settings
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
    });
  </script>
</body>
</html>
